{
  "compilerOptions": {
    // Target modern JS features
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,

    // Enable strict type checks
    "strict": true,
    "skipLibCheck": true,

    // Useful for debugging
    "sourceMap": true,

    // Required for Drizzle + Neon
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    // Node support
    "types": ["node"]
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
